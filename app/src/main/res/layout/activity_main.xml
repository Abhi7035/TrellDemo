<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hg.TrellDemo.activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGetStarted"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:gravity="center"
        android:text="Trell Demo"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ripple_bg"
        android:stateListAnimator="@drawable/drawable_fab_state_list_animator"
        android:text="@string/Get_Started"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:elevation="@dimen/btnElevation"
        android:textSize="@dimen/btnTextSize"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
